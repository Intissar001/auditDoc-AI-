    <stylesheets>
        <URL value="@../css/Project.css" />
    </stylesheets>

    <children>
        <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="TOP_CENTER">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="lblName" styleClass="card-title" text="Titre du Projet" wrapText="true" />
                                <Label fx:id="lblPartner" styleClass="card-subtitle" text="Nom du Partenaire" />
                            </children>
                        </VBox>
                        <Button fx:id="btnEdit" onAction="#handleEdit" styleClass="icon-button" text="âœŽ" />
                    </children>
                </HBox>

                <Label fx:id="lblDesc" minHeight="50.0" styleClass="card-desc" text="Description courte du projet..." wrapText="true" />

                <HBox alignment="CENTER_LEFT" styleClass="badge-container">
                    <children>
                        <Label fx:id="lblStatus" styleClass="status-badge" text="Actif" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblProgress" styleClass="percent-badge" text="87%" />
                    </children>
                </HBox>

                <GridPane hgap="10.0" vgap="8.0" style="-fx-padding: 0 0 20 0;">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <children>
                        <Label styleClass="date-label" text="Date de DÃ©but:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
