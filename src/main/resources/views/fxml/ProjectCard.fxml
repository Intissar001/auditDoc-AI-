                        <Label styleClass="date-label" text="Date de Fin:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="lblEndDate" styleClass="date-value" text="2025-12-31" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER_RIGHT" maxWidth="Infinity" />

                        <Label styleClass="date-label" text="Prochain Audit:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="lblAudit" styleClass="date-value" text="2024-12-15" GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER_RIGHT" maxWidth="Infinity" />
                    </children>
                </GridPane>

                <Button fx:id="btnFolder" onAction="#handleOpenFolder" maxWidth="Infinity" styleClass="btn-outline" text="ðŸ“‚  Dossier du projet" />
