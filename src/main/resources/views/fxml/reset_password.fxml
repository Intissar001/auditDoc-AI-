<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" styleClass="root" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourapp.controller.ResetPasswordController">

    <VBox alignment="CENTER" spacing="20" styleClass="container">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <HBox alignment="CENTER" styleClass="logo-container">
            <VBox alignment="CENTER" styleClass="logo-box">
                <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                    <image>
                        <Image url="@../icons/logo.png" />
                    </image>
                </ImageView>
            </VBox>
        </HBox>

        <Label styleClass="title" text="Réinitialisation">
            <font>
                <Font name="System Bold" size="24" />
            </font>
        </Label>

        <Label styleClass="subtitle" text="Saisissez le code reçu par email" textAlignment="CENTER" wrapText="true" />

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Code de réinitialisation" styleClass="field-label" />
                <TextField fx:id="codeField" promptText="Collez le code ici" styleClass="text-field" />
            </VBox>

            <VBox spacing="5">
                <Label text="Nouveau mot de passe" styleClass="field-label" />
                <PasswordField fx:id="newPasswordField" promptText="••••••••" styleClass="text-field" />
            </VBox>

            <VBox spacing="5">
                <Label text="Confirmer le mot de passe" styleClass="field-label" />
                <PasswordField fx:id="confirmPasswordField" promptText="••••••••" styleClass="text-field" />
            </VBox>

            <Button fx:id="resetButton" maxWidth="Infinity" onAction="#handleResetPassword" styleClass="create-button" text="Changer le mot de passe">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
        </VBox>

        <HBox alignment="CENTER">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
            <Hyperlink onAction="#handleBackToLogin" styleClass="link" text="Annuler et retourner à la connexion">
                <font>
                    <Font size="13" />
                </font>
            </Hyperlink>
        </HBox>
    </VBox>
</VBox>