<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yourapp.controller.LoginController"
      alignment="CENTER"
      styleClass="root"
      stylesheets="@../css/login.css">

    <VBox styleClass="container" alignment="CENTER" spacing="20">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <HBox alignment="CENTER" styleClass="logo-container">
            <VBox alignment="CENTER" styleClass="logo-box">
                <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                    <image>
                        <Image url="@../icons/logo.png"/>
                    </image>
                </ImageView>
            </VBox>
        </HBox>

        <Label text="Audit Doc AI" styleClass="title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>

        <Label text="Connexion" styleClass="subtitle">
            <font>
                <Font size="16"/>
            </font>
        </Label>

        <VBox spacing="20" styleClass="form-container">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>

            <VBox spacing="8">
                <Label text="Email" styleClass="field-label">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="emailField"
                           promptText="exemple@email.com"
                           styleClass="text-field"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Mot de passe" styleClass="field-label">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField"
                               promptText="••••••••"
                               styleClass="text-field"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <Hyperlink fx:id="motDePasseOublieLink"
                           text="Mot de passe oublié?"
                           styleClass="link-small">
                    <font>
                        <Font size="12"/>
                    </font>
                </Hyperlink>
            </HBox>

            <Button fx:id="connexionButton"
                    text="Se connecter"
                    maxWidth="Infinity"
                    styleClass="create-button">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Button>

            <HBox alignment="CENTER">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
                <Hyperlink fx:id="creerCompteLink"
                           text="Vous n'avez pas de compte? Créer un compte"
                           styleClass="link">
                    <font>
                        <Font size="13"/>
                    </font>
                </Hyperlink>
            </HBox>
        </VBox>
    </VBox>
</VBox>