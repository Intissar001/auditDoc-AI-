<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      style="-fx-background-color: white; -fx-padding: 30;">

    <Label text="⚙ Paramètres"
           style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <Label text="Configuration de l'application"
           style="-fx-font-size: 16px; -fx-text-fill: #666;"/>

    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Préférences générales" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Thème:" prefWidth="150"/>
            <ComboBox>
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Clair"/>
                        <String fx:value="Sombre"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Langue:" prefWidth="150"/>
            <ComboBox>
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Français"/>
                        <String fx:value="English"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>
        </HBox>
    </VBox>

    <Button text="Enregistrer" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
</VBox>