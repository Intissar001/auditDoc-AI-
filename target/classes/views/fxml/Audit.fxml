<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<ScrollPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourapp.controller.AuditController"
            fitToWidth="true" styleClass="page-scroll-pane" VBox.vgrow="ALWAYS">
    <content>

        <VBox spacing="25.0" styleClass="page-content">
            <children>

                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="page-title" text="Audit" />
                                        <Label styleClass="page-subtitle" text="Analysez automatiquement vos documents pour la conformité" />
                                    </children>
                                </VBox>

                                <VBox spacing="20.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Audit Intelligent" />
                                        <HBox spacing="20.0">
                                            <children>

                                                <VBox prefHeight="77.0" prefWidth="0.0" spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label styleClass="dropdown-label" text="Sélectionner le Projet" />
                                                        <ComboBox fx:id="projetDropdown" prefHeight="55.0" prefWidth="284.0" promptText="Sélectionner le Projet" styleClass="modern-dropdown" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label styleClass="dropdown-label" text="Sélectionner un Partenaire" />
                                                        <ComboBox fx:id="partenaireDropdown" prefHeight="52.0" prefWidth="415.0" promptText="Sélectionner un Partenaire" styleClass="modern-dropdown" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <VBox spacing="20.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Importer les Documents" />

                                        <VBox fx:id="dropzone" alignment="CENTER" prefHeight="350.0" styleClass="dropzone">
                                            <children>
                                                <Label styleClass="upload-icon-placeholder" text="⬆" />
                                                <Label styleClass="dropzone-text-primary" text="Glissez-déposez vos fichiers ici">
                                                    <VBox.margin>
                                                        <Insets top="15.0" />
                                                    </VBox.margin>
                                                </Label>

                                                <Label styleClass="dropzone-text-separator" text="ou">
                                                    <VBox.margin>
                                                        <Insets bottom="5.0" top="5.0" />
                                                    </VBox.margin>
                                                </Label>

                                                <Button onAction="#handleBrowseFiles" styleClass="btn-secondary" text="Parcourir les fichiers" />

                                                <Label styleClass="dropzone-file-info" text="PDF, Excel, Word (Max 10MB par fichier)">
                                                    <VBox.margin>
                                                        <Insets top="15.0" />
                                                    </VBox.margin>
                                                </Label>
                                            </children>
                                        </VBox>

                                    </children>
                                </VBox>

                                <VBox prefHeight="300.0" />

                            </children>
                            <padding>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                            </padding>
                        </VBox>

                    </content>
                </ScrollPane>

