<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourapp.controller.ProjectFormController">
    <children>
        <Label styleClass="title-text" text="Détails du Projet" />

        <VBox spacing="5.0">
            <Label text="Nom du Projet" />
            <TextField fx:id="txtName" promptText="Entrez le nom" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Description" />
            <TextArea fx:id="txtDescription" prefHeight="80.0" promptText="Description du projet" />
        </VBox>

        <HBox spacing="10.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Date de Début" />
                <DatePicker fx:id="dpStart" maxWidth="Infinity" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Date de Fin" />
                <DatePicker fx:id="dpEnd" maxWidth="Infinity" />
            </VBox>
        </HBox>

        <VBox spacing="5.0">
            <Label text="Partenaire Bailleur" />
            <ComboBox fx:id="cbPartner" maxWidth="Infinity" promptText="Sélectionner un partenaire" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Statut" />
            <ComboBox fx:id="cbStatus" maxWidth="Infinity" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
            <Button onAction="#handleCancel" styleClass="btn-outline" text="Annuler" />
            <Button onAction="#handleSave" styleClass="btn-primary" text="Enregistrer" />
        </HBox>
    </children>
</VBox>